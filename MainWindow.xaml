<Window x:Class="Knight.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Рыцарь" Height="500" Width="600"
        WindowStartupLocation="CenterScreen"
        Background="LightGray">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Text="Управление рыцарем" 
                   FontSize="16" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,0,0,10"/>

        <!-- Информация о рыцаре -->
        <GroupBox Grid.Row="1" Header="Текущее состояние рыцаря" Margin="0,0,0,10">
            <Grid>
                <!-- Стекпанель для размещения изображения и текста -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <!-- Изображение рыцаря -->
                    <Image x:Name="KnightImage" Height="200" Width="120" 
                           Source="/Image1.png" Stretch="Uniform" Margin="10"/>

                    <!-- Текстовая информация о рыцаре -->
                    <TextBlock x:Name="tbKnightInfo" FontSize="14" Margin="10" 
                               TextWrapping="Wrap" FontFamily="Arial" VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- Панель управления -->
        <GroupBox Grid.Row="2" Header="Действия">
            <UniformGrid Columns="3" Margin="10">
                <Button x:Name="btnCurrentState" Content="Текущее состояние" 
                        Click="BtnCurrentState_Click" Margin="5" Height="30"/>
                <Button x:Name="btnDeed" Content="Совершить подвиг" 
                        Click="BtnDeed_Click" Margin="5" Height="30"/>
                <Button x:Name="btnRepair" Content="Починка доспехов" 
                        Click="BtnRepair_Click" Margin="5" Height="30"/>
                <Button x:Name="btnRest" Content="Отдых в замке" 
                        Click="BtnRest_Click" Margin="5" Height="30"/>
                <Button x:Name="btnReset" Content="Перезагрузка" 
                        Click="BtnReset_Click" Margin="5" Height="30"/>
                <Button x:Name="btnDuel" Content="Дуэль" 
                        Click="BtnDuel_Click" Margin="5" Height="30"/>
            </UniformGrid>
        </GroupBox>
    </Grid>
</Window>